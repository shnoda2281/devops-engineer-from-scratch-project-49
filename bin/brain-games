#!/usr/bin/env python3
def welcome_user():
    name = input("May I have your name? ")
    print(f"Hello, {name}!")

def main():
    print("Welcome to the Brain Games!")
    try:
        from brain_games.cli import welcome_user as real_welcome
        real_welcome()
    except Exception:
        welcome_user()

if __name__ == "__main__":
    main()
