#!/usr/bin/env python3

# Консольная обёртка для запуска приветствия Brain Games.
# Держим максимально простой entry-point под требования Hexlet CI.

try:
    # Если у тебя есть модуль с приветствием:
    from brain_games.cli import welcome_user
except Exception:
    # Фоллбек на простое приветствие, если модуля нет
    def welcome_user():
        name = input("May I have your name? ")
        print(f"Hello, {name}!")

def main():
    print("Welcome to the Brain Games!")
    welcome_user()

if __name__ == "__main__":
    main()
